@model IEnumerable<IceCreamCompany.Models.IceCream>

@{
  ViewData["Title"] = "Index";
}

<h1>Choose your favourite one</h1>
<div class="img-container">
  @foreach (var item in Model)
  {
    <div class="item">
      <h3>
        @Html.DisplayFor(model => item.Flavor)
      </h3>
      @if (item.PhotoFileName != null)
      {
        <div>
          <img src="@Url.Action("GetImage", values: new { iceCreamId = item.IceCreamId })" />
        </div>
      }
      <div>
        <p>
          @Html.DisplayFor(model => item.Price)
        </p>
      </div>
    </div>
  }
</div>
