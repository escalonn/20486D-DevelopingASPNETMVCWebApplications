@model IEnumerable<ElectricStore.Models.MenuCategory>

<li class="nav-item">
  <a class="nav-link" asp-controller="Products" asp-action="Index">Home</a>
</li>
<li class="nav-item dropdown">
  <a class="nav-link dropdown-toggle" href="#" id="navbar-dropdown-menu-link" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Electronics
  </a>
  <div class="dropdown-menu" aria-labelledby="navbar-dropdown-menu-link">
    @foreach (var item in Model)
    {
      <a class="dropdown-item" asp-controller="Products" asp-action="GetByCategory" asp-route-id="@item.Id">
        @Html.DisplayFor(model => item.Name)
      </a>
    }
  </div>
</li>
<li class="nav-item">
  <a class="nav-link" asp-controller="Products" asp-action="AddToShoppingList">Add to Shopping List</a>
</li>
<li class="nav-item">
  <a class="nav-link" asp-controller="ShoppingCart" asp-action="Index">My Shopping Cart</a>
</li>
<li class="nav-item">
  <div class="display-cached-time">
    The content cached since: @DateTime.Now
  </div>
</li>
