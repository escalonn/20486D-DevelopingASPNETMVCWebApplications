<!DOCTYPE html>

<html lang="en">
<head>
  <meta name="viewport" content="width=device-width">
  <title>@ViewBag.Title</title>
  <link rel="stylesheet" href="~/css/restaurant-style.css">
  <link rel="stylesheet" href="~/node_modules/bootstrap/dist/css/bootstrap.min.css">
  <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
  <script src="~/node_modules/popper.js/dist/umd/popper.min.js"></script>
  <script src="~/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
  <script src="~/js/menu-active.js"></script>
</head>
<body>
  <nav class="navbar navbar-expand-md navbar-dark navbar-custom p-1">
    <a class="navbar-brand" asp-controller="RestaurantBranches" asp-action="Index">Our Restaurants</a>
    <div class="collapse navbar-collapse" id="nav-content">
      <ul class="navbar-nav" id="nav-content">
        <li class="nav-item">
          <a class="nav-link" asp-controller="RestaurantBranches" asp-action="Index">Home<span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" asp-controller="Reservation" asp-action="Create">Reservation</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" asp-controller="WantedAd" asp-action="Index">We Are Hiring</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" asp-controller="JobApplication" asp-action="Create">Submit Job Application</a>
        </li>
      </ul>
    </div>
  </nav>
  <div class="main-title">
    <h1>Welcome to Our Restaurant</h1>
    <button class="btn-transparent" type="button" onclick="location.href='@Url.Action("Create", controller: "Reservation")'">Reservation Now</button>
  </div>
  <div>
    @RenderBody()
  </div>
  @RenderSection("Scripts", required: false)
</body>
</html>
