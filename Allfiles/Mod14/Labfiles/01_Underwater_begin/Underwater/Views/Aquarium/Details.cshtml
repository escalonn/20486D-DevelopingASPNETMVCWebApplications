@model Underwater.Models.Fish

@{
  ViewData["Title"] = "Details";
}

<div class="container">
  <div class="photo-index-card-details">
    <h3 class="display-picture-title">
      @Html.DisplayFor(model => model.Name)
    </h3>
    @if (Model.ImageName != null)
    {
      <div class="photo-display">
        @if (Model.ImageUrl != null)
        {
          <img class="photo-display-img" src="@Model.ImageUrl" alt="">
        }
        else
        {
          <img class="photo-display-img" src="@Url.Action("GetImage", values: new { id = Model.FishId })" alt="">
        }
      </div>
    }
    <div>
      <p class="display-label">
        @Html.DisplayNameFor(model => model.ScientificName)
      </p>
      <br>
      <p class="display-field">
        @Html.DisplayFor(model => model.ScientificName)
      </p>
    </div>
    <div>
      <p class="display-label">
        @Html.DisplayNameFor(model => model.CommonName)
      </p>
      <br>
      <p class="display-field">
        @Html.DisplayFor(model => model.CommonName)
      </p>
    </div>
    <div>
      <button class="btn btn-secondary" type="button" onclick="location.href='@Url.Action("Index")'">Back</button>
    </div>
  </div>
</div>
